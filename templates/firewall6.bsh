#!/bin/bash

# created by ansible

case "$1" in
  start|restart)
   # preparations
  modprobe ip_tables
  modprobe ip_conntrack
  echo 1 > /proc/sys/net/ipv6/conf/all/forwarding

  # adding managed chains
  ip6tables -N ANSIBLE_INPUT
  ip6tables -N ANSIBLE_FORWARD
  ip6tables -N ANSIBLE_OUTPUT
  ip6tables -I INPUT -j ANSIBLE_INPUT
  ip6tables -I FORWARD -j ANSIBLE_FORWARD
  ip6tables -I OUTPUT -j ANSIBLE_OUTPUT

  # reset managed rules (during restart)
  ip6tables -F ANSIBLE_INPUT
  ip6tables -F ANSIBLE_FORWARD
  ip6tables -F ANSIBLE_OUTPUT

  # standards
  ip6tables -A ANSIBLE_INPUT -i lo -j ACCEPT
  ip6tables -A ANSIBLE_OUTPUT -o lo -j ACCEPT

  ip6tables -A ANSIBLE_INPUT -p icmpv6 --icmpv6-type echo-request -m limit --limit 900/min -j ACCEPT
  ip6tables -A ANSIBLE_INPUT -p icmpv6 --icmpv6-type echo-reply -m limit --limit 900/min -j ACCEPT
  ip6tables -A ANSIBLE_INPUT -p icmpv6 --icmpv6-type router-advertisement -m hl --hl-eq 255 -j ACCEPT
  ip6tables -A ANSIBLE_INPUT -p icmpv6 --icmpv6-type neighbor-solicitation -m hl --hl-eq 255 -j ACCEPT
  ip6tables -A ANSIBLE_INPUT -p icmpv6 --icmpv6-type neighbor-advertisement -m hl --hl-eq 255 -j ACCEPT
  ip6tables -A ANSIBLE_INPUT -p icmpv6 --icmpv6-type redirect -m hl --hl-eq 255 -j ACCEPT

  ip6tables -A ANSIBLE_INPUT -m state --state RELATED,ESTABLISHED -j ACCEPT

  # ANSIBLE_INPUT allow
{% if firewall.allow.input is defined %}
{% for port in firewall.allow.input.tcp | default([]) %}
  ip6tables -A ANSIBLE_INPUT -p tcp --dport {{ port }} -j ACCEPT
{% endfor %}

{% for port in firewall.allow.input.udp | default([]) %}
  ip6tables -A ANSIBLE_INPUT -p udp --dport {{ port }} -j ACCEPT
{% endfor %}

{% for ip in firewall.allow.input.ips | default([]) %}
  ip6tables -A ANSIBLE_INPUT -p tcp -s {{ ip }} -j ACCEPT
{% endfor %}

{% for rule in firewall.raw6 | default([]) %}
  ip6tables {{ rule }}
{% endfor %}
{% endif %}

  # ANSIBLE_FORWARD allow
{% if firewall.allow.forward is defined %}
{% for port in firewall.allow.forward.tcp | default([]) %}
  ip6tables -A ANSIBLE_FORWARD -p tcp --dport {{ port }} -j ACCEPT
{% endfor %}

{% for port in firewall.allow.forward.udp | default([]) %}
  ip6tables -A ANSIBLE_FORWARD -p udp --dport {{ port }} -j ACCEPT
{% endfor %}

{% for ip in firewall.allow.forward.ips | default([]) %}
  ip6tables -A ANSIBLE_FORWARD -p tcp -s {{ ip }} -j ACCEPT
{% endfor %}
{% endif %}

  # return jumps
  ip6tables -A ANSIBLE_INPUT -j RETURN
  ip6tables -A ANSIBLE_FORWARD -j RETURN
  ip6tables -A ANSIBLE_OUTPUT -j RETURN

  # default policies
  ip6tables -P INPUT DROP
  ip6tables -P OUTPUT {{ firewall.output_policy | default('DROP') }}
  ip6tables -P FORWARD {{ firewall.forward_policy | default('DROP') }}
;;

 stop)
  ip6tables -P INPUT ACCEPT
  ip6tables -P OUTPUT ACCEPT
  ip6tables -P FORWARD ACCEPT

  ip6tables -F ANSIBLE_INPUT
  ip6tables -F ANSIBLE_FORWARD
  ip6tables -F ANSIBLE_OUTPUT

  ip6tables -D INPUT -j ANSIBLE_INPUT
  ip6tables -D FORWARD -j ANSIBLE_FORWARD
  ip6tables -D OUTPUT -j ANSIBLE_OUTPUT

  ip6tables -X ANSIBLE_INPUT
  ip6tables -X ANSIBLE_FORWARD
  ip6tables -X ANSIBLE_OUTPUT
;;
esac
